@model Umbraco13BlogSite.App_Code.Models.ViewComponentModels.NavbarView

@if (Model != null)
{
    <nav class="navbar navbar-expand-lg navbar-light" id="mainNav">
        <div class="container px-4 px-lg-5">
            <a class="navbar-brand" href="/">@Model?.SiteName</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                Menu
                <i class="fas fa-bars"></i>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ms-auto py-4 py-lg-0">
                    <li class="nav-item"><a class="nav-link px-lg-3 py-3 py-lg-4" href="/">Home</a></li>
                    @foreach( var item in Model?.navbarChildren)
                    {
                        <li class="nav-item"><a class="nav-link px-lg-3 py-3 py-lg-4" href="@item.Url">@item.Name</a></li>
                    }

                    <form class="form-inline my-2 my-lg-0" role="search" method="get" action="/search">
                        <div class="input-group">
                            <input class="form-control" type="search" id="q" name="q" title="Search" placeholder="Search" aria-label="Search" aria-describedby="Search" required />
                            <div class="imput-group-append">
                                <button class="btn btn-outline-success " type="submit">Search</button>
                            </div>
                        </div>
                    </form>
                </ul>
            </div>
        </div>
    </nav>

}
